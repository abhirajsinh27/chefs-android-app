<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- Author -->
        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chef’s Delight"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="8dp"/>

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/imgRecipeDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"
            android:src="@drawable/pizza"
            android:clipToOutline="true" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Homemade Veg Pizza"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Ingredients Header -->
        <TextView
            android:id="@+id/tvIngredientsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Ingredient List -->
        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 2 cups all-purpose flour\n• 1 tsp dry yeast\n• 1 tsp sugar\n• ½ cup warm water\n• 2 tbsp olive oil\n• ½ cup pizza sauce\n• 1 cup mozzarella cheese\n• ½ cup capsicum (sliced)\n• ½ cup onions (sliced)\n• ½ cup tomatoes (sliced)\n• 1 tsp chili flakes\n• 1 tsp oregano\n• Salt to taste"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Cooking Instructions Header -->
        <TextView
            android:id="@+id/tvCookingHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparation Instructions"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Cooking Instructions -->
        <TextView
            android:id="@+id/tvCookingInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. In warm water, dissolve sugar and yeast. Let it rest for 10 minutes until frothy.\n\n2. Add flour, salt, and olive oil to the yeast mixture. Knead into a soft dough.\n\n3. Cover and let it rise for 1 hour until doubled in size.\n\n4. Roll the dough into a pizza base and spread pizza sauce evenly.\n\n5. Add cheese, vegetables, chili flakes, and oregano toppings.\n\n6. Bake in a preheated oven at 200°C for 12–15 minutes or until the crust is golden and cheese melts.\n\n7. Slice and serve hot with extra chili flakes and oregano."
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
