<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Chef's"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/imgRecipeDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"
            android:src="@drawable/vegsoup"
            android:clipToOutline="true" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Veg Soup"
            android:textColor="#888888"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Ingredients Header -->
        <TextView
            android:id="@+id/tvIngredientsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Ingredients for Veg Soup"
            android:textColor="#888888"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Ingredient List -->
        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" •1 cup finely chopped mixed vegetables (carrot, beans, cabbage, capsicum)\n •1/2 cup sweet corn kernels\n •1 small onion, finely chopped\n •1 teaspoon ginger-garlic paste\n •2 cups vegetable stock or water\n •1 tablespoon corn flour mixed with 3 tbsp water\n •1 teaspoon soy sauce\n •1/2 teaspoon black pepper powder\n •Salt to taste\n •1 teaspoon oil or butter"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Cooking Header -->
        <TextView
            android:id="@+id/vegSoupCook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Cooking Instructions"
            android:textColor="#888888"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Cooking Steps -->
        <TextView
            android:id="@+id/vegSoupCooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n1. Sauté Vegetables:\n\n   •Heat oil or butter in a pan.\n   •Add chopped onions and sauté until translucent.\n   •Add ginger-garlic paste and sauté for a few seconds.\n   •Add chopped vegetables and sweet corn, stir-fry for 2 minutes.\n\n\n2. Cook the Soup:\n\n   •Pour in the vegetable stock or water and bring it to a boil.\n   •Let it simmer for about 5-7 minutes until the vegetables are tender.\n\n\n3. Thicken the Soup:\n\n   •Add soy sauce, salt, and black pepper powder.\n   •Slowly add the corn flour slurry while stirring continuously.\n   •Cook for another 2 minutes until the soup thickens.\n\n\n4. Serve:\n\n   •Garnish with spring onions or coriander leaves.\n   •Serve hot and enjoy!"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>
