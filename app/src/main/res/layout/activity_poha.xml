<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPoha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Chef's"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/imgRecipeDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"
            android:src="@drawable/poha"
            android:clipToOutline="true" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Poha"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Ingredients Header -->
        <TextView
            android:id="@+id/tvIngredientsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Ingredients for Poha"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Ingredient List -->
        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="  • 2 cups flattened rice (poha)\n
 • 1 small onion, finely chopped\n
 • 1 small potato, diced\n
 • 1 green chili, chopped\n
 • 1/2 teaspoon mustard seeds\n
 • 1/2 teaspoon turmeric powder\n
 • 1 tablespoon peanuts\n
 • 1 tablespoon oil\n
 • Salt to taste\n
 • Fresh coriander for garnish\n
 • Lemon juice (optional)"
            android:textColor="#888888"
            android:textSize="16sp" />

        <!-- Cooking Instructions Header -->
        <TextView
            android:id="@+id/tvCookingHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Cooking Instructions"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Cooking Instructions -->
        <TextView
            android:id="@+id/tvCookingInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="\n1. Prepare Poha:\n\n
   • Rinse poha under running water until it softens.\n
   • Drain and set aside.\n\n

2. Cook the Ingredients:\n\n
   • Heat oil in a pan, add mustard seeds and let them splutter.\n
   • Add peanuts and fry until crispy.\n
   • Add onions, potatoes, green chilies, and sauté until potatoes soften.\n\n

3. Mix Poha:\n\n
   • Add turmeric powder and salt. Stir well.\n
   • Add the softened poha and mix gently.\n
   • Cook for 2-3 minutes on low heat.\n\n

4. Serve:\n\n
   • Garnish with fresh coriander and a squeeze of lemon juice.\n
   • Serve hot with tea or yogurt."
            android:textColor="#888888"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>