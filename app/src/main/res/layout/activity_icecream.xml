<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- Author -->
        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chef’s Delight"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="8dp"/>

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/imgRecipeDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"
            android:src="@drawable/icecream"
            android:clipToOutline="true" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Homemade Vanilla Ice Cream"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Ingredients Header -->
        <TextView
            android:id="@+id/tvIngredientsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Ingredient List -->
        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 2 cups heavy cream\n
• 1 cup whole milk\n
• 3/4 cup sugar\n
• 1 tablespoon vanilla extract\n
• A pinch of salt"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Cooking Instructions Header -->
        <TextView
            android:id="@+id/tvCookingHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparation Instructions"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Cooking Instructions -->
        <TextView
            android:id="@+id/tvCookingInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="
1. In a large bowl, whisk together cream, milk, sugar, and salt until sugar dissolves.\n\n
2. Stir in vanilla extract.\n\n
3. Pour the mixture into an ice cream maker and churn according to manufacturer’s instructions until thick.\n\n
4. Transfer to an airtight container and freeze for 4–5 hours or until firm.\n\n
5. Scoop and serve with chocolate syrup or fruit toppings."
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
