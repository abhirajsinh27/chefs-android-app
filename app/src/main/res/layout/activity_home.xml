<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackf"
    android:fillViewport="true"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <!-- Welcome Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Welcome to Chef's"
            android:textColor="#F5F1ED"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Become a better cook with Chef's"
            android:textColor="#F5F1ED"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="Discover delicious recipes, step-by-step video tutorials, and personalize your cooking experience with your profile."
            android:textColor="#F5F1ED"
            android:textSize="14sp" />

        <!-- Grid for Recipes, Video Tutorials, and Profile -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:columnCount="2">

            <!-- Recipes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgRecipes"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_background"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/write"
                    android:clipToOutline="true"/>

                <TextView
                    android:id="@+id/txtRecipes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/recipes"
                    android:textColor="#F5F1ED"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Videos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgVideos"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rvideo"
                    android:clipToOutline="true"
                    />

                <TextView
                    android:id="@+id/txtVideos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Videos"
                    android:textColor="#F5F1ED"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/txtProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Profile"
                    android:textColor="#F5F1ED"
                    android:textSize="18sp" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

</ScrollView>
