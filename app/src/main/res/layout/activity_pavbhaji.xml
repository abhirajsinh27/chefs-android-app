<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- Author -->
        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chef’s Delight"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="8dp"/>

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/imgRecipeDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"
            android:src="@drawable/pavbhaji"
            android:clipToOutline="true" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pav Bhaji"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Ingredients Header -->
        <TextView
            android:id="@+id/tvIngredientsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Ingredient List -->
        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 4 pav (bread rolls)\n• 2 medium potatoes, boiled and mashed\n• 1/2 cup green peas\n• 1/2 cup chopped cauliflower\n• 1/2 cup chopped capsicum\n• 2 tomatoes, finely chopped\n• 1 onion, finely chopped\n• 2 tbsp butter\n• 1 tbsp pav bhaji masala\n• 1 tsp red chili powder\n• 1/4 tsp turmeric powder\n• Salt to taste\n• 1 tbsp lemon juice\n• Fresh coriander leaves for garnish"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Cooking Instructions Header -->
        <TextView
            android:id="@+id/tvCookingHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparation Instructions"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Cooking Instructions -->
        <TextView
            android:id="@+id/tvCookingInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Heat butter in a large pan. Add onions and sauté until golden.\n\n2. Add chopped tomatoes and cook until they turn soft.\n\n3. Add pav bhaji masala, chili powder, turmeric, and salt. Mix well.\n\n4. Add boiled potatoes, peas, cauliflower, and capsicum. Mash everything together while cooking.\n\n5. Add a little water and simmer for 5–7 minutes until it reaches a thick consistency.\n\n6. Toast the pav (bread rolls) with butter on a tawa until golden brown.\n\n7. Serve the hot bhaji with buttered pav, chopped onions, coriander, and lemon wedges."
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
