<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvChefName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chef's Special"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="8dp" />

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/imgRecipeDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chowmein"
            android:clipToOutline="true" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Veg Chowmein"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Ingredients Header -->
        <TextView
            android:id="@+id/tvIngredientsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Ingredient List -->
        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 200g noodles\n
• 1 onion, sliced\n
• 1 carrot, julienned\n
• 1 capsicum, sliced\n
• 1/2 cup cabbage, shredded\n
• 2 tbsp soy sauce\n
• 1 tbsp vinegar\n
• 1 tbsp chili sauce\n
• 2 cloves garlic, minced\n
• 2 tbsp oil\n
• Salt and pepper to taste"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Cooking Instructions Header -->
        <TextView
            android:id="@+id/tvCookingHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cooking Instructions"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Cooking Instructions -->
        <TextView
            android:id="@+id/tvCookingInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="
1. Boil noodles according to package instructions and drain well.\n\n
2. Heat oil in a pan, sauté garlic until fragrant.\n\n
3. Add onions, carrots, capsicum, and cabbage. Stir fry for 2–3 minutes.\n\n
4. Add soy sauce, vinegar, chili sauce, salt, and pepper. Mix well.\n\n
5. Add boiled noodles and toss until evenly coated with sauces.\n\n
6. Serve hot, garnished with spring onions."
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
