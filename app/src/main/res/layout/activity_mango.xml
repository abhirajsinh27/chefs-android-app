<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Recipe: Mango Shake -->
        <TextView
            android:id="@+id/tvMangoShake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Chef's"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imgMangoShake"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"
            android:src="@drawable/mengo"
            android:clipToOutline="true" />

        <TextView
            android:id="@+id/tvMangoShakeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Mango Shake"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMangoShakeIngredientsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Ingredients for Mango Shake"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMangoShakeIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="• 2 ripe mangoes (peeled and chopped)\n• 2 cups chilled milk\n• 2 tbsp sugar (adjust to taste)\n• 4-5 ice cubes\n• 1/2 tsp cardamom powder (optional)\n• Chopped nuts for garnish (optional)"
            android:textColor="#888888"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMangoShakeInstructionsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Preparation Instructions"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMangoShakeInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="1. Blend Ingredients:\n• In a blender, add chopped mangoes, milk, sugar, and ice cubes.\n• Blend until smooth and creamy.\n\n2. Add Flavor:\n• Optionally, add cardamom powder for extra taste.\n• Blend again for a few seconds.\n\n3. Serve:\n• Pour into glasses.\n• Garnish with chopped nuts if desired.\n• Serve chilled."
            android:textColor="#888888"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
