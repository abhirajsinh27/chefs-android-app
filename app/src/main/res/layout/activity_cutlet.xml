<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvcutletChef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Chef's"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/imgCutlet"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"
            android:src="@drawable/cutlet"
            android:clipToOutline="true" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/tvCutletTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Vegetable Cutlet"
            android:textColor="#777777"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Ingredients Header -->
        <TextView
            android:id="@+id/tvIngredientsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Ingredients"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Ingredient List -->
        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="  • 2 medium potatoes, boiled and mashed\n
 • 1/2 cup mixed vegetables (carrot, peas, beans), boiled\n
 • 1 small onion, finely chopped\n
 • 1 green chili, finely chopped\n
 • 1/2 teaspoon ginger-garlic paste\n
 • 1/2 teaspoon garam masala\n
 • 1/2 teaspoon red chili powder\n
 • Salt to taste\n
 • 2 tablespoons bread crumbs (for binding)\n
 • Oil for shallow frying"
            android:textColor="#888888"
            android:textSize="16sp" />

        <!-- Instructions Header -->
        <TextView
            android:id="@+id/tvInstructionsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Cooking Instructions"
            android:textColor="#777777"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="
1. Mix boiled potatoes, vegetables, onions, and spices in a bowl.\n\n
2. Add bread crumbs to bind the mixture and shape into small cutlets.\n\n
3. Heat oil on a tawa or pan and shallow fry the cutlets on both sides until golden brown.\n\n
4. Serve hot with ketchup or mint chutney."
            android:textColor="#888888"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
